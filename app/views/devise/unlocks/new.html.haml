.col-lg-offset-5.col-md-offset-4.col-sm-offset-3.col-xs-offset-1
  .col-lg-4.col-md-6.col-sm-7.col-xs-11
    %h2.text-center Resend unlock instructions
    = simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      = f.full_error :unlock_token
      %br/
      .form-inputs
        = f.input_field :email, required: true, autofocus: true, class: 'form-control',  placeholder: 'Please enter email.'
        %br/
      .form-actions
        = f.button :submit, "Resend unlock instructions", class: 'btn btn-warning btn-block'
        %br/
        %br/
    = render "devise/shared/links"
