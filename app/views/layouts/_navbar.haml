%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %span.navbar-brand= link_to AppConfig.workshops_name, root_path
    %p.navbar-text.navbar-right
      - if user_signed_in?
        %p.pull-right.btn.btn-default= link_to "Edit settings", edit_user_registration_path
        %p.pull-right.btn.btn-default= link_to "Log out", destroy_user_session_url, method: :delete
      - else
        %p.pull-right.btn.btn-default= link_to "Sign Up", new_user_registration_path
        %p.pull-right.btn.btn-default= link_to "Log In", new_user_session_path