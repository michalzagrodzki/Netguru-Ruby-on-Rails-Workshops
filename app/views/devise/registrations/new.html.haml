.col-lg-offset-5.col-md-offset-4.col-sm-offset-3.col-xs-offset-1
  .col-lg-4.col-md-6.col-sm-7.col-xs-11.login-signup-title-area
    %h2.text-center Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      = devise_error_messages!
      %br/
      .form-inputs
        = f.input_field :email, required: true, autofocus: true, class: 'form-control',  placeholder: 'Your email.'
        %br/
        = f.input_field :password, required: true, class: 'form-control',  placeholder: 'Your password. Min. 8 characters.'
        %br/
        = f.input_field :password_confirmation, required: true, class: 'form-control',  placeholder: 'Please confirm your password.'
      %br/
      .form-actions
        = f.button :submit, "SIGN UP", class: 'btn btn-block custom-primary-btn-login-signup'
    = render "devise/shared/links"
