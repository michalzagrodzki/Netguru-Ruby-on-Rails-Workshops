%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %span.navbar-brand #{AppConfig.workshops_name}
    %p.navbar-text.navbar-right
      - if user_signed_in?
        %p.pull-right #{link_to "Edit settings", edit_user_registration_path, class: 'btn btn-default' }
        %p.pull-right #{link_to "Log out", destroy_user_session_url, method: :delete, class: 'btn btn-default' }
      - else
        %p.pull-right #{link_to "Sign in", new_user_registration_path, class: 'btn btn-default' }
        %p.pull-right #{link_to "Log in", new_user_session_path, class: 'btn btn-default' }