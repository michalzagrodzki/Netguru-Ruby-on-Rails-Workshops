.col-lg-offset-5.col-md-offset-4.col-sm-offset-3.col-xs-offset-1
  .col-lg-4.col-md-6.col-sm-7.col-xs-11
    %h2.text-center Change your password
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      %br/
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
        %br/
      .form-inputs
        = f.input_field :password, required: true, autofocus: true, class: 'form-control',  placeholder: 'New password.'
        %br/
        = f.input_field :password_confirmation, required: true, class: 'form-control',  placeholder: 'Please confirm your new password.'
        %br/
      .form-actions
        = f.button :submit, "Change my password", class: 'btn btn-warning btn-block'
        %br/
        %br/
    = render "devise/shared/links"
