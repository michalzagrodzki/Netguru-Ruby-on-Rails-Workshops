.col-lg-offset-5.col-md-offset-4.col-sm-offset-3.col-xs-offset-1
  .col-lg-4.col-md-6.col-sm-7.col-xs-11.login-signup-title-area
    %h2.text-center Have you forgotten your password?
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      %br/
      .form-inputs
        = f.input_field :email, required: true, autofocus: true, class: 'form-control',  placeholder: 'Please enter email.'
        %br/
      .form-actions
        = f.button :submit, "Send me reset password instructions", class: 'btn btn-warning btn-block custom-primary-btn-login-signup'
        %br/
    = render "devise/shared/links"
