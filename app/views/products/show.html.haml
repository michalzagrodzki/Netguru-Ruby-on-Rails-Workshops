%p#notice= notice
%p#error= flash[:error]

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category
  = product.category.name

%h3 Reviews
= render reviews

-if user_signed_in?
  = render 'reviews/form'
  = link_to 'Edit', edit_category_product_path(category.id, product.id)

= link_to 'Back', [category], class: 'btn btn-primary'
