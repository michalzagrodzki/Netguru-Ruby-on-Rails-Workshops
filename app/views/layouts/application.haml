!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %span.navbar-brand #{AppConfig.workshops_name}
        %p.navbar-text.navbar-right
          - if user_signed_in?
            %p.pull-right #{link_to "Edit settings", edit_user_registration_path, class: 'btn btn-default' }
            %p.pull-right #{link_to "Log out", destroy_user_session_url, method: :delete, class: 'btn btn-default' }
          - else
            %p.pull-right #{link_to "Sign in", new_user_registration_path, class: 'btn btn-default' }
            %p.pull-right #{link_to "Log in", new_user_session_path, class: 'btn btn-default' }

    .container-fluid
      .row
        .col-lg-12
          = render 'layouts/messages'

          = yield
