.col-lg-offset-5.col-md-offset-4.col-sm-offset-3.col-xs-offset-1
  .col-lg-4.col-md-6.col-sm-7.col-xs-11.login-signup-title-area
    %h2.text-center
      Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      .form-inputs
        = f.input_field :email, required: true, autofocus: true, class: 'form-control',  placeholder: 'Enter email.'
        %br/
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p.text-center
            Currently waiting confirmation for: #{resource.unconfirmed_email}
            %br/
        = f.input_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class: 'form-control',  placeholder: 'Please enter new password.'
        %br/
        = f.input_field :password_confirmation, required: false, class: 'form-control',  placeholder: 'Please confirm new password.'
        %br/
        = f.input_field :current_password, hint: "we need your current password to confirm your changes", required: true, class: 'form-control',  placeholder: 'Please enter your current password.'
        %br/
      .form-actions
        = f.button :submit, "Update", class: 'btn btn-block custom-primary-btn-login-signup'
        %br/
        %br/
    %h4.text-center.review-title-font Cancel my account
    %button.btn.btn-default.btn-block.btn-sm.custom-secondary-btn-login-signup= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
    %br/
    %br/
    %button.btn.btn-default.btn-block.custom-secondary-btn-login-signup= link_to "Go back to main page", root_path
    %br/
    %br/
